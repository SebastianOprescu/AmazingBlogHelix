
	
	
	<main role="main" class="container blog-post-detail">
        <div class="row">
            <div class="blog-post-detail-card card col-lg-12">
				@Html.Sitecore().Field("BigImage", new { @class = "card-img-top", @alt = "Card image cap" })
                <!--<img class="card-img-top" src="assets/images/tech.jpg" alt="Card image cap">-->
                <div class="card-body bg-light">
                    <strong class="d-inline-block mb-2 text-success">@Html.Sitecore().Field("Type")</strong>
                    <h3 class="card-title">@Html.Sitecore().Field("Title")</h3>
                    <div class="mb-1 text-muted">@Html.Sitecore().Field("Date", new { format = "MMM dd, yyyy" })</div>
                    @Html.Sitecore().Field("LongContent")
                <div class="blog-detail-tag-list">
                    <span class="read-more-heading">Read more: </span>
                    @{
                        string alltags = Html.Sitecore().Field("Tags").ToString();
                        string[] tags = alltags.Split('|');
                    }
                    @foreach (string tag in tags)
                    {
                        <a class="btn btn-info" href="#" role="button">@tag</a>
                    }
                </div>
                </div>
            </div>
        </div>
    </main>